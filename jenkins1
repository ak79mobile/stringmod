pipeline {
    
    agent any

    environment {
        NEW_VERSION = '1.3.0'
        SERVER_CREDENTIALS = credentials('AK-Git-Test')
    }

    parameters {
        choice (name: 'VERSION', choices:['1.1.0', '1.2.0','1.3.0'], description: '')
        booleanParam(name: 'executeTests', defaultValue: true, description: '')
    }


    stages {
        stage('Build') {
            steps {
                echo 'committed Building the application...'
            }
        }
        stage('test') {
            when {
                expression {
                    param.executeTests
                }
            }
            steps {
                echo 'committed Testing the application...'
                echo "building version ${NEW_VERSION}"
                echo 'building version ${NEW_VERSION} ........ with single code'
            }
        }
        stage('deploy') {
            steps {
                echo ' committed  Deploying the application...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'committed  Deploying....'
                echo "deploying with ${SERVER_CREDENTIALS}.........."

                echo "Trying withCredentials ..................."

                withCredentials([usernamePassword(credentials: 'AK-Git-Test', usernameVariable: USER, passwordVariable: PWD)]){
                    sh "some script with username ---- ${USER}  password ---- ${PWD}"
                }                
            }
        }
    }

    post {
        always {
            echo 'Always block'
        }
        failure {
            echo 'Failure block'
        }
        changed {
            echo 'Changed block'
        }
        
    }
}
